<%-include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">

        <% listItems.forEach((item)=> { %>
            <div class="item">
                <input type="checkbox">
                <p class="spacer">
                    <%=item.name%>
                </p>
                <form action="/delete" method="post">
                    <input type="hidden" name="itemId" value=<%=item.id%>>
                    <button type="submit" class="delete-item-button"><i class="gg-trash"></i></button>
                </form>
            </div>
            <%});%>
                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" class="spacer" required>
                    <button type="submit" name="list" value="<%=listTitle%>">+</button>
                </form>
    </div>
    <%-include("footer") -%>